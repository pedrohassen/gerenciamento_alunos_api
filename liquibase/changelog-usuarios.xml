<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
      http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="pedro">
        <sql>
            CREATE TYPE perfil_usuario AS ENUM ('USER', 'ADMIN');
        </sql>
    </changeSet>

    <changeSet id="2" author="pedro">
        <createTable tableName="usuarios">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nome" type="VARCHAR(150)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(200)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="senha" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="perfil" type="perfil_usuario" defaultValue="USER">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="boolean" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="data_criacao" type="DATE" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
            <column name="data_atualizacao" type="DATE" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
